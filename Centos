sudo rpm -Uvh https://repo.zabbix.com/zabbix/7.4/rhel/9/x86_64/zabbix-release-7.4-1.el9.noarch.rpm
sudo dnf clean all
sudo dnf install zabbix-agent

on centos 
sudo vi /etc/zabbix/zabbix_agentd.conf

Server=10.36.x.x  # Zabbix server IP
ServerActive=10.36.x.x  # Zabbix server IP
Hostname=centos-host-unique-name  # Must be unique
# Timeout=30  # Uncomment and increase if needed
# EnableRemoteCommands=0  # Set to 1 only if needed (security risk)


sudo systemctl restart zabbix-agent
sudo systemctl enable zabbix-agent

# Configure firewall (if enabled)
sudo firewall-cmd --permanent --add-port=10050/tcp
sudo firewall-cmd --reload


